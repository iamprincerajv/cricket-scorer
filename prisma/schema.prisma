generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Player {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  name      String
  image     String?
  desc      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("players")
}

model Match {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  name       String
  teamIds    String[]     @db.ObjectId
  overs      Int
  curTeam    Int
  allPlayers PlayerType[]
  curPlayers CurPlayer[]
  // desc      String?
  // date      DateTime?
  // time      DateTime?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@map("matches")
}

type PlayerType {
  id         String   @db.ObjectId
  batEvents  String[]
  bowlEvents String[]
}

type CurPlayer {
  id   String @db.ObjectId
  type String
}

model Team {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  name      String
  playerIds String[] @db.ObjectId
  captain   String?  @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("teams")
}

model BallEvent {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  matchId   String   @db.ObjectId
  batsmanId String   @db.ObjectId
  bowlerId  String   @db.ObjectId
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ballEvents")
}
